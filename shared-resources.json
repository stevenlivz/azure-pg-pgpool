{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "region": {
      "type": "string"
    },
    "storageSettings": {
      "type": "object"
    },
    "availabilitySetSettings": {
      "type": "object"
    },
    "networkSettings": {
      "type": "object"
    }
  },
  "variables": {
    "vnetID": "[resourceId(parameters('networkSettings').virtualNetworkResourceGroup, 'Microsoft.Network/virtualNetworks', parameters('networkSettings').virtualNetworkName)]",
    "subnet1Ref": "[concat(variables('vnetID'),'/subnets/', parameters('networkSettings').subnet1Name)]"
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[concat(parameters('storageSettings').name, copyindex())]",
      "apiVersion": "2015-05-01-preview",
      "location": "[parameters('region')]",
      "copy": {
        "name": "dbStoragePoolLoop",
        "count": "[parameters('storageSettings').count]"
      },
      "properties": {
        "accountType": "Standard_LRS"
      }
    },
    {
      "apiVersion": "2015-05-01-preview",
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('networkSettings').virtualNetworkName]",
      "location": "[parameters('region')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('networkSettings').addressPrefix]"
          ]
        },
        "subnets": [
          {
           "id": "[variables('subnetRef')]"         
          }
        ]
      }
    },
    {
      "type": "Microsoft.Compute/availabilitySets",
      "name": "[parameters('availabilitySetSettings').name]",
      "apiVersion": "2015-05-01-preview",
      "location": "[parameters('region')]",
      "properties": {
        "platformFaultDomainCount": "[parameters('availabilitySetSettings').fdCount]",
        "platformUpdateDomainCount": "[parameters('availabilitySetSettings').udCount]"
      }
    }
  ],
  "outputs": {}
}
